<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:ignore="ContentDescription"
    android:id="@+id/record_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/backgroundColor">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="136dp"
        android:background="@drawable/circle_outline" />

    <Chronometer
        android:id="@+id/chronometer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="202dp"
        android:textSize="45sp"
        android:textColor="?colorControlNormal"
        style="@style/MediumBoldText"/>

    <ImageView
        android:id="@+id/pulse_anim_img1"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:visibility="gone"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="65dp"
        android:background="@drawable/background_circle"
        android:backgroundTint="?attr/pulseAnim1"/>

    <ImageView
        android:id="@+id/pulse_anim_img2"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:visibility="gone"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="65dp"
        android:background="@drawable/background_circle"
        android:backgroundTint="?attr/pulseAnim2"/>

    <ImageView
        android:id="@+id/pulse_anim_img3"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:visibility="gone"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="65dp"
        android:background="@drawable/background_circle"
        android:backgroundTint="?attr/pulseAnim3"/>

    <ImageButton
        android:id="@+id/start_record"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="bottom|center_horizontal"
        app:layout_dodgeInsetEdges="bottom"
        android:layout_marginBottom="70dp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="@drawable/circle_ripple"
        android:background="@drawable/background_circle"
        android:backgroundTint="@color/button_color_state"
        android:src="@drawable/create_record"/>

    <ImageButton
        android:id="@+id/save_record"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:visibility="gone"
        android:layout_gravity="bottom|start"
        android:layout_marginStart="45dp"
        android:layout_marginBottom="80dp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="@drawable/circle_ripple"
        android:background="@drawable/background_circle"
        android:backgroundTint="?attr/recordButtonsColor"
        android:src="@drawable/save_record"
        app:tint="?attr/recordIconsColor"/>

    <ImageButton
        android:id="@+id/pause_record"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:visibility="gone"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="70dp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="@drawable/circle_ripple"
        android:background="@drawable/background_circle"
        android:backgroundTint="@color/button_color_state"
        android:src="@drawable/avd_pause_to_play"/>

    <ImageView
        android:id="@+id/discard_record"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:visibility="gone"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="45dp"
        android:layout_marginBottom="80dp"
        android:padding="15dp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="@drawable/circle_ripple"
        android:background="@drawable/background_circle"
        android:backgroundTint="?attr/recordButtonsColor"
        android:src="@drawable/discard_record"
        app:tint="?attr/recordIconsColor" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>