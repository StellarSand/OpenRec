<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="ContentDescription,UseCompoundDrawables"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:layout_gravity="center">

    <ImageView
        android:id="@+id/image_view_empty_db"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/settings_recordings"
        android:layout_marginBottom="@dimen/margin_10"/>

    <TextView
        android:id="@+id/text_view_empty_db"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/no_recordings_here"
        android:textSize="@dimen/text_17"
        android:textColor="?attr/textTitleColor"/>

</LinearLayout>