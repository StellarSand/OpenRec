<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bottom_sheet_shape"
    android:paddingTop="@dimen/margin_12"
    android:paddingBottom="@dimen/margin_8"
    android:orientation="vertical"
    android:layout_gravity="center">

    <include
        layout="@layout/bottom_sheet_header"/>

        <RadioGroup
            android:id="@+id/options_radiogroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/margin_6.5"
            android:paddingBottom="@dimen/margin_6.5"
            android:paddingEnd="@dimen/margin_12"
            android:paddingStart="@dimen/margin_16">

            <RadioButton
                android:id="@+id/option_default"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_8"
                android:layout_marginBottom="@dimen/margin_4"
                android:paddingStart="@dimen/margin_8"
                android:paddingEnd="@dimen/margin_8"
                android:checked="true"
                android:text="@string/system_default"
                android:textAlignment="viewStart"
                android:textColor="?attr/textTitleColor"
                android:textSize="@dimen/text_16" />

            <RadioButton
                android:id="@+id/option1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_8"
                android:layout_marginBottom="@dimen/margin_4"
                android:paddingStart="@dimen/margin_8"
                android:paddingEnd="@dimen/margin_8"
                android:text="@string/light"
                android:textAlignment="viewStart"
                android:textColor="?attr/textTitleColor"
                android:textSize="@dimen/text_16" />

            <RadioButton
                android:id="@+id/option2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_8"
                android:layout_marginBottom="@dimen/margin_4"
                android:paddingStart="@dimen/margin_8"
                android:paddingEnd="@dimen/margin_8"
                android:text="@string/dark"
                android:textAlignment="viewStart"
                android:textColor="?attr/textTitleColor"
                android:textSize="@dimen/text_16" />

        </RadioGroup>

    <include
        layout="@layout/dialog_footer"/>

</LinearLayout>