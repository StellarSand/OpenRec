<ripple xmlns:android="http://schemas.android.com/apk/res/android" android:color="?colorControlHighlight">
    <item android:id="@android:id/mask">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/margin_8"/>
            <solid android:color="?attr/rippleColor"/>
        </shape>
    </item>
    <item android:id="@android:id/background">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/margin_8"/>
            <solid android:color="?attr/backgroundColor"/>
            <stroke android:color="?attr/cardStrokeColor" android:width="1dp"/>
        </shape>
    </item>
</ripple>
